{% extends 'home/homeBase.html.twig' %}

{% block sections %}
	<h1 class="mt-3 mx-5">Résultats:</h1>

	{# display results #}
	<div class="py-5">
		<div class="container mt-5">
			<div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-5 justify-content-center">
				{% for article in articles %}
					{% include "article/_article_card.html.twig" %}
				{% else %}
					<p>Aucun résultat.</p>
				{% endfor %}
			</div>
		</div>
	</div>

	{# pagination #}
	{{ knp_pagination_render(articles) }}
{% endblock %}
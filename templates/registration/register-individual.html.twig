{% extends 'base.html.twig' %}


    {% block title %}Register{% endblock %}


{% block body %}

  <h2 class="title mt-3 mx-5">Registre d'inscription</h2>
    <div class="py-5">
        <div class="container mt-100">
            <div class="row gx-4 gx-lg-10 row-cols-2 row-cols-md-10 row-cols-xl-50 justify-content-center">
                <div class="col mb-100">
                    <div class="card h-100 bg-light">
                        <div class="card-body p-4">
                            <div class="text-center">
                                {{ form_start(registrationForm) }}</br>

                                {{ form_label(registrationForm.email) }}</br>
                                {{ form_widget(registrationForm.email) }}</br>

                                {{ form_label(registrationForm.plainPassword) }}</br>
                                {{ form_widget(registrationForm.plainPassword) }}</br>

                                {{ form_label(registrationForm.username) }}</br>
                                {{ form_widget(registrationForm.username) }}</br>

                                {{ form_label(registrationForm.phone) }}</br>
                                {{ form_widget(registrationForm.phone) }}</br>

                                {{ form_row(registrationForm.agreeTerms) }}</br>
                                <button type="submit" class="btn btn-outline-dark mt-auto">S'inscrire</button></br>
                                {{ form_end(registrationForm) }}</br>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

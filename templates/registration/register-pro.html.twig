{% extends 'base.html.twig' %}

{% block title %}S'inscrire{% endblock %}

{% block body %}
    <h1 class="mt-3 mx-5">S'inscrire</h1>
    <div class="py-5">
      <div class="container mt-100">
          <div class="row gx-4 gx-lg-10 row-cols-2 row-cols-md-10 row-cols-xl-50 justify-content-center">
            <div class="col mb-100">
              <div class="card h-100 bg-light">
              <div class="card-body p-4">
                  <div class="text-center">
    {{ form_start(registrationForm) }}
          <div class="form-group row">
          <div class="col-sm-5 col-form-label">
          {{form_label(registrationForm.email)}}
            </div>
          <div class="col-sm-5">
        {{ form_widget(registrationForm.email, {'attr': {'class': 'task_field'}}) }}
        </div>
        </div>

        <div class="form-group row">
        <div class="col-sm-5 col-form-label">
        {{form_label(registrationForm.plainPassword)}}
          </div>
        <div class="col-sm-5">
      {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'task_field'}}) }}
      </div>
      </div>

      <div class="form-group row">
      <div class="col-sm-5 col-form-label">
      {{form_label(registrationForm.noSIRET)}}
        </div>
      <div class="col-sm-5">
    {{ form_widget(registrationForm.noSIRET, {'attr': {'class': 'task_field'}}) }}
    </div>
    </div>

    <div class="form-group row">
    <div class="col-sm-5 col-form-label">
    {{form_label(registrationForm.name)}}
      </div>
    <div class="col-sm-5">
  {{ form_widget(registrationForm.name, {'attr': {'class': 'task_field'}}) }}
  </div>
  </div>

  <div class="form-group row">
  <div class="col-sm-5 col-form-label">
  {{form_label(registrationForm.phone)}}
    </div>
  <div class="col-sm-5">
{{ form_widget(registrationForm.phone, {'attr': {'class': 'task_field'}}) }}
</div>
</div>

        <button type="submit" class="btn btn-outline-dark mt-3">S'inscrire</button>
        {{ form_end(registrationForm) }}
    </div>
</div>
</div>
</div>
</div>
</div>
</div>
{% endblock %}

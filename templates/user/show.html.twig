{% extends 'base.html.twig' %}

{% block title %}Utilisateur{% endblock %}

{% block body %}
    <h1 class="mt-3 mx-5">Utilisateur</h1>

    {% if not is_granted('ROLE_BLOCKED') %}
        <div class="container-lg px-2 mt-4">
            <a class="btn btn-primary btn-lg px-4" href="{{ path('app_user_edit') }}">Modifier mon profil</a>
        </div>
        <div class="container-xl px-4 mt-4">
    {% endif %}
    <div class="row">
        <div class="col-xl-4">
            <!-- Profile picture card-->
            <div class="card mb-4 mb-xl-0">
                <div class="card-header">Photo de profil</div>
                <div class="card-body text-center">
                    <!-- Profile picture image-->
                    <img class="img-account-profile rounded-circle mb-2" src="{{ asset(avatars_path ~ (user.avatar ? user.avatar : 'default.png')) }}" alt="User avatar" width="150px" height="150px">
                </div>
            </div>
        </div>

                <div class="col-lg-8">
                        <!-- Account details card-->
                        <div class="card mb-4">
                            <div class="card-header">Informations du compte</div>
                            <div class="card-body">
                    <div class="card mb-4">
                        <div class="card-body">
                            {% if user.username %}
                            <div class="row">
                                <div class="col-sm-3">
                                    <p class="mb-0">Pseudonyme</p>
                                </div>
                                <div class="col-sm-9">
                                    <p class="text-muted mb-0">{{ user.username }}</p>
                                </div>
                            </div>
                                <hr>
                            {% endif %}

                            {% if user.name and user.noSIRET %}

                                <div class="row">
                                    <div class="col-sm-3">
                                        <p class="mb-0">Numéro SIRET</p>
                                    </div>
                                    <div class="col-sm-9">
                                        <p class="text-muted mb-0">{{ user.noSIRET }}</p>
                                    </div>
                                </div>
                                <hr>
                                <div class="row">
                                    <div class="col-sm-3">
                                        <p class="mb-0">Nom d'entreprise</p>
                                    </div>
                                    <div class="col-sm-9">
                                        <p class="text-muted mb-0">{{ user.name }}</p>
                                    </div>
                                </div>
                            {% endif %}
                            <div class="row">
                                <div class="col-sm-3">
                                    <p class="mb-0">Email</p>
                                </div>
                                <div class="col-sm-9">
                                    <p class="text-muted mb-0">{{ user.email }}</p>
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <p class="mb-0">Téléphone</p>
                                </div>
                                <div class="col-sm-9">
                                    <p class="text-muted mb-0">{{ user.phone ? user.phone : 'Non renseigné' }}</p>
                                </div>
                            </div>
                        </div>
                    </div>
            </div>
        </div>
                </div>
    </div>
    </div>

    </section>
    {{ include('user/_delete_form.html.twig') }}
{% endblock %}

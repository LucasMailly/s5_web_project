
{% extends 'base.html.twig' %}


{% block title %}Edit User{% endblock %}

{% block body %}
    {{ form_start(form) }}
    <div class="container-lg px-2 mt-4">
    <a class="btn btn-primary btn-lg px-4" href="{{ path('app_user_index') }}" >Retourner sur mon profil</a>
    </div>
    <div class="container-xl px-4 mt-4">

        <div class="row">
            <div class="col-xl-4">
                <!-- Profile picture card-->
                <div class="card mb-4 mb-xl-0">
                    <div class="card-header">Photo de profil</div>
                    <div class="card-body text-center">
                        <!-- Profile picture image-->
                        <img class="img-account-profile rounded-circle mb-2" src="{{ asset(avatars_path ~ (user.avatar ? user.avatar : 'default.png')) }}" alt="User avatar" width="150px" height="150px">
                        <!-- Profile picture upload button-->
                        {{ form_row(form.imageFile) }}
                    </div>
                </div>
            </div>
            <div class="col-xl-8">
                <!-- Account details card-->
                <div class="card mb-4">
                    <div class="card-header">Account Details</div>
                    <div class="card-body">
                        <form>
                            {% if 'ROLE_INDIVIDUAL' in app.user.roles %}
                            <!-- Form Group (username)-->
                            <div class="mb-3">
                                {{ form_row(form.username, {'attr': {'class': 'form-control'}}) }}
                            </div>
                            {% endif %}
                            <!-- Form Row        -->
                            {% if 'ROLE_PRO' in app.user.roles %}
                                <div class="row gx-3 mb-3">
                                    <!-- Form Group noSIRET-->
                                    <div class="col-md-6">
                                        {{ form_row(form.noSIRET, {'attr': {'class': 'form-control'}}) }}

                                    </div>
                                    <!-- Form Group (organization name)-->
                                    <div class="col-md-6">
                                        {{ form_row(form.name, {'attr': {'class': 'form-control'}}) }}
                                    </div>
                                </div>
                            {% endif %}

                            <!-- Form Group (email address)-->
                            <div class="mb-3">
                                {{ form_row(form.email, {'attr': {'class': 'form-control'}}) }}
                            </div>
                            <!-- Form Row-->
                            <div class="row gx-3 mb-3">
                                <!-- Form Group (phone number)-->
                                <div class="col-md-6">
                                    {{ form_row(form.phone, {'attr': {'class': 'form-control'}}) }}


                                </div>

                            </div>
                            <!-- Save changes button-->
                            {{ include('user/_form.html.twig') }}
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{ form_end(form) }}
    <div class="container-lg px-2 mt-4">
    {{ include('user/_delete_form.html.twig') }}
    </div>
{% endblock %}
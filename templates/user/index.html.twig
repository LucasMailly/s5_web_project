{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1>User index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Password</th>
                <th>Username</th>
                <th>Avatar</th>
                <th>Phone</th>
                <th>Name</th>
                <th>NoSIRET</th>
                <th>UpdatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>{{ user.password }}</td>
                <td>{{ user.username }}</td>
                <td>
                    {% if user.avatar %}
                        <img src="{{ avatars_path ~ '/' ~ user.avatar }}" alt="avatar" width="40px" height="40px">
                    {% else %}
                        <img src="{{ avatars_path ~ '/' ~ 'default.png' }}" alt="avatar" width="40px" height="40px">
                    {% endif %}
                </td>
                <td>{{ user.phone }}</td>
                <td>{{ user.name }}</td>
                <td>{{ user.noSIRET }}</td>
                <td>{{ user.updatedAt ? user.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_user_show', {'id': user.id}) }}">show</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}

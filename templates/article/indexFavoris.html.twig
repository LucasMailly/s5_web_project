{% extends 'base.html.twig' %}

{% block title %}Mes articles favoris{% endblock %}

{% block javascripts %}
	{{ parent() }}
	{{ encore_entry_script_tags('favorite') }}
{% endblock %}

{% block body %}

	<h1 class="mt-3 mx-5">Mes articles Favoris</h1>
	<div class="py-5">
		<div class="container mt-5">
			<div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-5 justify-content-center">
				{% for article in articleFavoris %}
					{% include "article/_article_card.html.twig" %}
				{% else %}
					<p>Aucun favoris pour le moment</p>
				{% endfor %}
			</div>
		</div>
	</div>

{% endblock %}

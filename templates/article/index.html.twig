{% extends 'base.html.twig' %}

{% block title %}Mes articles
{% endblock %}

{% block body %}
	<h1 class="mt-3 mx-5">Mes Articles</h1>
	{% if not is_granted('ROLE_BLOCKED') %}
		<a class="btn btn-outline-dark bg-light mt-3 mx-5" href="{{ path('app_article_new') }}">Ajouter un article</a>
	{% endif %}
	<div class="py-5">
		<div class="container mt-5">
			<div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-5 justify-content-center">
				{% for article in articles %}
					{% include "article/_article_card.html.twig" %}
				{% else %}
					<p>Vous n'avez pas encore d'article</p>
				{% endfor %}
			</div>
		</div>
	</div>
{% endblock %}
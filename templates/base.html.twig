<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
        <script src="{{ asset('bundles/fosjsrouting/js/router.min.js') }}"></script>
        <script src="{{ path('fos_js_routing_js', { callback: 'fos.Router.setData' }) }}"></script>
    </head>

    <nav>
        {% block nav %}
            <a href="{{ path('app_home') }}">Nom</a>
            <div>
                <ul>
                    {% if app.user %}
                        {% if 'ROLE_PRO' in app.user.roles %}
                            <li>
                                <a href="{{ path('app_article_dashboard') }}">Mes articles</a>
                            </li>
                        {% endif %}
                    {% endif %}

                    {% if app.user and 'ROLE_ADMIN' in app.user.roles %}
                        <li>
                            <a href="{{ path('app_admin') }}">Dashboard</a>
                        </li>
                    {% else %}
                        <li>
                            <a href="{{ path('app_contact') }}">Contact</a>
                        </li>
                    {% endif %}

                    {% if app.user %}
                        <li>
                            <a href="{{ path('app_logout') }}">Déconnexion</a>
                        </li>
                        <li>
                            <a href="{{ path('app_user_index') }}">
                                <img src="{{ avatars_path ~ (app.user.avatar ? app.user.avatar : "default.png") }}" alt="Avatar" width="50px" height="50px">
                            </a>
                        </li>
                    {% else %}
                        <li>
                            <a href="{{ path('app_login') }}">Connexion</a>
                        </li>
                        <li>
                            <a href="{{ path('app_register') }}">Inscription</a>
                        </li>
                    {% endif %}
                </ul>
            </div>
        {% endblock %}
    </nav>

    <body>
        {% for type, messages in app.flashes %}
            {% for message in messages %}
                <div class="flash-{{ type }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}

        {% block body %}{% endblock %}
    </body>
</html>
